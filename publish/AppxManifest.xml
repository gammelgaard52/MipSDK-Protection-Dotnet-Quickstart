<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
         xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
         xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
         IgnorableNamespaces="uap rescap">

  <Identity Name="com.mgr.mipsdkprotection"
            Publisher="CN=Martin Gammelgård Rasmussen"
            Version="1.0.0.0"
            ProcessorArchitecture="x64" />

  <Properties>
    <DisplayName>MIP SDK Protection</DisplayName>
    <PublisherDisplayName>Martin Gammelgård Rasmussen</PublisherDisplayName>
    <Logo>assets\logo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0"/>
  </Dependencies>

  <Resources>
    <Resource Language="en-us"/>
  </Resources>

  <Applications>
    <Application Id="MipProtectionApp" Executable="mipsdk-dotnet-protection-quickstart.exe" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements DisplayName="MIP Protection"
                          Description="Protects files using MIP SDK"
                          BackgroundColor="transparent"
                          Square150x150Logo="assets\logo.png"
                          Square44x44Logo="assets\logo.png"/>
    </Application>
  </Applications>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>
